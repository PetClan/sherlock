# Sherlock - Environment Configuration
# Copy this file to .env and fill in your values

# App Settings
APP_NAME="Sherlock - Shopify App Diagnostics"
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./sherlock.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sherlock

# Shopify App Credentials (from your Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_themes,read_products,read_script_tags,read_content

# App URL (your deployed URL, used for OAuth callback)
APP_URL=http://localhost:8000
# APP_URL=https://your-app.herokuapp.com

# CORS (comma-separated list of allowed origins, or * for all)
CORS_ORIGINS=*
